<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ideacarry.example17.DemoActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/texture3dBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="3d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/texture2dArrBtn" />

    <Button
        android:id="@+id/texture2dArrBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="2d arr"
        app:layout_constraintLeft_toRightOf="@id/texture3dBtn"
        app:layout_constraintRight_toLeftOf="@id/texture2dBtn"
        app:layout_constraintTop_toTopOf="@id/texture3dBtn" />

    <Button
        android:id="@+id/texture2dBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="2d"
        app:layout_constraintLeft_toRightOf="@id/texture2dArrBtn"
        app:layout_constraintRight_toLeftOf="@id/compareBtn"
        app:layout_constraintTop_toTopOf="@id/texture3dBtn" />

    <Button
        android:id="@+id/compareBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="compare"
        app:layout_constraintLeft_toRightOf="@id/texture2dBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/texture3dBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>